@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 text-center">
    <h2>Manage Employees</h2>
    <div class="mt-4">
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-lg mx-2">
            <i class="fas fa-list"></i> Employee List
        </a>
        <a asp-controller="Employee" asp-action="Titles" class="btn btn-info btn-lg mx-2">
            <i class="fas fa-briefcase"></i> Title List
        </a>
        <a asp-controller="Employee" asp-action="Add" class="btn btn-success btn-lg mx-2">
            <i class="fas fa-plus"></i> Add Employee
        </a>
    </div>
</div>

